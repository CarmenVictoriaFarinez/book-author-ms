{
    "name": "Prueba Técnica Backend",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "authors_service", 
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "features": {
        // Esto permite que Docker funcione dentro de Codespaces
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "njpwerner.autodocstring"
            ]
        }
    },
    // Puertos que Codespaces abrirá automáticamente para ti en 2025
    "forwardPorts": [8000, 8001, 5432, 6379]
}
